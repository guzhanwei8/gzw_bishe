<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="10dp"
     >

    <ImageView
        android:id="@+id/cout_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <TextView
        android:id="@+id/cout_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/cout_icon"
        android:text="type"
        android:textColor="@android:color/black"
        android:textSize="18sp" 
        android:layout_alignTop="@id/cout_icon"
        />
    <TextView
        android:id="@+id/cout_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/cout_icon"
        android:text="num"
        android:textColor="@android:color/black"
        android:textSize="18sp" 
        android:layout_alignBottom="@id/cout_icon"
        />
    <TextView
        android:id="@+id/cout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="time"
        android:textColor="@android:color/black"
        android:textSize="18sp" 
        android:layout_alignParentRight="true"
        
        />

</RelativeLayout>