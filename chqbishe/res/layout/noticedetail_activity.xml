<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    
    android:layout_height="match_parent" 
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/noticedetail_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/noticedetail_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="theme" 
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/noticedetail_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="auther" 
                android:layout_centerHorizontal="true"
                android:layout_below="@id/noticedetail_theme"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:maxLines="1"
                />
            <TextView
                android:id="@+id/noticedetail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time" 
                android:textSize="20dp"
                android:maxLines="1"
                android:layout_alignTop="@id/noticedetail_author"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
            
            <TextView 
                android:id="@+id/noticedetail_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_below="@id/noticedetail_author"
                android:layout_margin="10dp"
                
                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>