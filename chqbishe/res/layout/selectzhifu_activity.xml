<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"    
     >
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:background="@color/jiaofeibg"
       android:orientation="vertical"
       >
       <TextView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
           android:gravity="center_horizontal"
           android:text="订单说明"
           android:textSize="20dp"
           />
       <TextView 
           android:id="@+id/select_instruction"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
           android:text="订单说明"
           android:layout_marginBottom="10dp"
           />
   </LinearLayout>
   
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       >
       <TextView 
       android:id="@+id/select_tv"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:text="金额："
       android:textSize="25dp"
           />
       <TextView 
           android:id="@+id/select_moneynum"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:text="0.00"
       android:layout_toRightOf="@id/select_tv"
       android:textSize="25dp"
           />
       <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:text="￥"
       android:layout_toRightOf="@id/select_moneynum"
       android:textSize="25dp"
           />
   </RelativeLayout>
   <RelativeLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       >
       <TextView 
       android:id="@+id/select_tv2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:text="支付方式："
       android:textSize="20dp"
           />
       <TextView 
       android:id="@+id/select_zhifu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:textSize="20dp"
       android:layout_toRightOf="@id/select_tv2"
       android:background="@drawable/icon_pay_type"
           />
       
   </RelativeLayout>
   
   
       <Button 
        android:id="@+id/select_go"
      	android:layout_width="match_parent"
      	android:layout_height="wrap_content"
		android:layout_margin="10dp" 
		android:background="@color/notice_bg"
		android:textColor="@color/textcolor_write"
		android:text="支付"
		android:textSize="20dp"     
      />
   
   
  
</LinearLayout>
