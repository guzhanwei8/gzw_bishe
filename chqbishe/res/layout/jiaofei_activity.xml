<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gzw.wuye.MainActivity" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/statusbar_bg"
        android:id="@+id/jiaofei_menu"
         >

        <Button
            android:id="@+id/jiaofei_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/hu8" 
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/home_jiaofei"
            android:textColor="@color/textcolor_write"
            android:background="@null"
            android:textSize="16dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/jiaofei_llayout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_below="@id/jiaofei_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
       <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="缴费"
        android:id="@+id/jiaofei_new"
        android:textSize="15dp"
        android:background="@drawable/detailsleft"
         />
   	 	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账单"
        android:id="@+id/jiaofei_old"
        android:textSize="15dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/detailsright1"
         />
    </LinearLayout>
   
    <FrameLayout 
        android:id="@+id/jiaofei_fraglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/jiaofei_llayout"
        android:layout_marginTop="20dp"
        ></FrameLayout>
   
</RelativeLayout>
