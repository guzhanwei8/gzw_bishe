<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gzw.wuye.MainActivity"
    android:background="@drawable/mainbg"
     >
	<RelativeLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:id="@+id/home_rl1"
	    >
     
     <ImageView
        android:layout_width="52.0dip"
        android:layout_height="52.0dip"
        android:contentDescription="@null"
        android:src="@drawable/me_head_bg" />

    <com.gzw.wuye.ui.CircularImage
        android:id="@+id/home_geren"
        android:layout_width="52.0dip"
        android:layout_height="52.0dip"
         />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_wether"
        android:text="wether"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        />
    <Button
         android:id="@+id/home_shezhi"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_alignParentRight="true"
         android:background="@drawable/periphery2"
         android:layout_alignTop="@id/home_geren"
         android:layout_alignBottom="@id/home_geren"
         />
     
	</RelativeLayout>
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:text="time"
	    android:textSize="30dp"
	    android:layout_below="@id/home_rl1"
	    android:id="@+id/home_time1"
	    />
	
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/home_time1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/home_notice"
        android:layout_marginRight="10dp"
        android:background="@drawable/loding_3_09"
         />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/home_jiaofei"
        android:layout_toRightOf="@id/home_notice"
        android:background="@drawable/loding_3_02"
         />
    
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/home_huangye"
        android:layout_marginTop="10dp"
        android:layout_below="@id/home_notice"
        android:layout_marginRight="10dp"
        android:background="@drawable/loding_3_15"
         />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/home_baoxiu"
        android:layout_toRightOf="@id/home_huangye"
        android:layout_marginTop="10dp"
        android:layout_below="@id/home_jiaofei"
        android:background="@drawable/loding_3_10"
         />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/home_hudong"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/home_huangye"
        android:background="@drawable/loding_3_11"
         />
    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/home_shenfen"
        android:layout_toRightOf="@id/home_hudong"
        android:layout_marginTop="10dp"
        android:layout_below="@id/home_baoxiu"
        android:background="@drawable/sup_content_icon1"
         />
    </RelativeLayout>
    

</RelativeLayout>
