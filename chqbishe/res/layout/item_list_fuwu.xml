<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="10dp"
     >

    
    <com.xunfang.widgets.SmartImageView
        android:id="@+id/seller_icon"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/seller_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/seller_icon"
        android:text="店名"
        android:textSize="20sp" 
        android:layout_alignTop="@id/cout_icon"
        />
    <TextView
        android:id="@+id/seller_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="phone"
        android:textSize="18sp" 
        android:layout_alignParentRight="true"
        android:textColor="@color/red"
        />

    <TextView
        android:id="@+id/seller_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/seller_icon"
        android:layout_alignLeft="@+id/seller_name"
        android:text="address"
        android:textSize="16sp" />

</RelativeLayout>